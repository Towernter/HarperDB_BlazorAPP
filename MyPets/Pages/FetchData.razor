@page "/fetchdata"

<h1>Dogs</h1>

<p>This section demonstrates fetching data from HarperDB</p>
<p> @result</p>

@if (pets == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dog Name</th>
                <th>Breed</th>
                <th>Age</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in pets)
            {
                <tr>
                    <td>@pet.id</td>
                    <td>@pet.dog_name</td>
                    <td>@pet.breed_id</td>
                    <td>@pet.age</td>
                    <td><button class="btn btn-danger" @onclick="() => DeletePet(pet.id)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    HttpRequestMessage requestMessage;
    HttpResponseMessage responseMessage;
    HttpClient http;
    List<Pet> pets;
    private string result = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var postBody = new
            {
                operation = "sql",
                sql = "SELECT * FROM dev.dog WHERE 1"
            };
            http = new HttpClient();
            requestMessage = new HttpRequestMessage
            {
                Method = HttpMethod.Post,
                RequestUri = new Uri(@"https://demo-towernter.harperdbcloud.com")
            };

            requestMessage.Content = JsonContent.Create(postBody);

            http.DefaultRequestHeaders.Add("Authorization", "Basic dG93ZXJudGVyOlhLM0o2TFZiN0dAIVVaaQ==");

            responseMessage = await http.SendAsync(requestMessage);
            pets = JsonSerializer.Deserialize
                    <List<Pet>>(await responseMessage.Content.ReadAsStringAsync());
        }
        catch (Exception)
        {

            result = responseMessage.ToString();
        }
    }

    //Delete a pet 
    private async void DeletePet(int id)
    {

        try
        {
            var postBody = new
            {

                operation =  "delete",
                schema= "dev",
                table =  "dog",
                hash_values= new[] { id }
            };
            http = new HttpClient();
            requestMessage = new HttpRequestMessage
            {
                Method = HttpMethod.Post,
                RequestUri = new Uri(@"https://demo-towernter.harperdbcloud.com")
            };

            requestMessage.Content = JsonContent.Create(postBody);

            http.DefaultRequestHeaders.Add("Authorization", "Basic dG93ZXJudGVyOlhLM0o2TFZiN0dAIVVaaQ==");

            responseMessage = await http.SendAsync(requestMessage);


            if (responseMessage.IsSuccessStatusCode)
            {
                result = "Pet has been deleted";
            }
        }
        catch (Exception)
        {

            result =responseMessage.ToString();
        }

    }

}
